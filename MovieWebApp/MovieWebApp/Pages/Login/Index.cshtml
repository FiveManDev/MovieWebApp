@page
@model MovieWebApp.Pages.Login.IndexModel
@{
    Layout = "_EmptyLayout";
    ViewData["Title"] = "Login";
}
<div class="sign section--bg" data-bg="/images/section/section.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="sign__content">
                    <!-- authorization form -->
                    <form method="post" class="sign__form">
                        <a href="index.html" class="sign__logo">
                            <img src="~/images/logo.svg" alt="">
                        </a>

                        <div class="sign__group">
                            <input asp-for="LoginDTO.UserName" type="text" class="sign__input" placeholder="Username">
                        </div>

                        <div class="sign__group">
                            <input asp-for="LoginDTO.Password" type="password" class="sign__input" placeholder="Password">
                        </div>

                        <div class="sign__group sign__group--checkbox">
                            <input id="remember" type="checkbox" asp-for="LoginDTO.RememberMe">
                            <label for="remember">Remember Me</label>
                        </div>

                        <button class="sign__btn" onclick="loading()" type="submit">Sign in</button>
                        <div class="col">
                            <a asp-page="/Login/LoginService" asp-page-handler="FacebookLogin" class="fb btn">
                                <i class="fab fa-facebook-f mr-25"></i> Login with Facebook
                            </a>
                            <a asp-page="/Login/LoginService" asp-page-handler="GoogleLogin" class="google btn">
                                <i class="fab fa-google mr-25">
                                </i> Login with Google
                            </a>
                        </div>
                        <span class="sign__text">Don't have an account? <a asp-page="/Register/Index">Sign up!</a></span>

                        <span class="sign__text"><a href="/forgot-password">Forgot password?</a></span>
                    </form>
                    <!-- end authorization form -->
                </div>
            </div>
        </div>
    </div>
</div>
<div id="toast"></div>

<style>
    .btn {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 4px;
        margin: 5px 0;
        opacity: 0.85;
        display: inline-block;
        font-size: 17px;
        line-height: 20px;
        text-decoration: none; /* remove underline from anchors */
    }
    .mr-25{
        margin-right: 25px;
    }

        .btn:hover {
            opacity: 1;
        }

    /* add appropriate colors to fb, twitter and google buttons */
    .fb {
        background-color: #3B5998;
        color: white;
    }

    .google {
        background-color: #dd4b39;
        color: white;
    }

    /* Two-column layout */
    .col {
        float: left;
        width: 100%;
        margin: auto;
        margin-top: 6px;
    }

</style>

@section Scripts
{
    <script>
        function loading(){
            loading = document.getElementById("loading");
            loading.hidden = false;
        }
    </script>
}