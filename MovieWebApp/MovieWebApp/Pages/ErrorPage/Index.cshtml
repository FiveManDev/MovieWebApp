@page
@model MovieWebApp.Pages.ErrorPage.IndexModel
@{
	Layout = "_EmptyLayout";
    ViewData["Title"] = "Error Page";
}

<!-- page 404 -->
<div class="page-404 section--bg" data-bg="images/section/section.jpg">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="page-404__wrap">
					<div class="page-404__content">
						<h1 class="page-404__title">@Model._StatusCode</h1>
						<p class="page-404__text">@Model.Message</p>
						<a href='javascript:history.go(-1)' class="page-404__btn">go back</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end page 404 -->