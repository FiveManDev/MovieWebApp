@model MovieAPI.Models.DTO.UserChat
@{
    var serial = ViewData["serial"];
}
<tr>
    <td>
        <div class="main__table-text">@serial</div>
    </td>
    <td>
        <div class="main__user">
            <div class="main__avatar">
                <img src="~/images/user.svg" alt="">
            </div>
            <div class="main__meta">
                <h3>@Model.firstName @Model.lastName</h3>
                <span>@Model.email</span>
            </div>
        </div>
    </td>
    <td>
        <div class="main__table-text main_table-content line-clamp ">@Model.message
        </div>
    </td>
    <td> </td>

    <td></td>

    <td></td>

    <td>
        <div class="main__table-text">@Model.time</div>
    </td>
    <td>
        @if (Model.isRead)
        {
            <div class="main__table-text main__table-text--red">Old</div>
        }
        else
        {
            <div class="main__table-text main__table-text--green">New</div>
        }
    </td>
</tr>