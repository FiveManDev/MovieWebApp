@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- home -->
<section class="home">
    <!-- home bg -->
    <div class="owl-carousel home__bg">
        @if (Model.MovieDTOs != null)
        {
            @foreach (var movie in @Model.MovieDTOs)
            {

                <div class="item home__cover" data-bg=@movie.Thumbnail></div>
            }
        }
        else
        {
            <div class="item home__cover" data-bg="images/home/home__bg.jpg"></div>
        }
    </div>
    <!-- end home bg -->

    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="home__title"><b>NEW MOVIES</b> OF THIS SEASON</h1>

                <button class="home__nav home__nav--prev" aria-label="prev card" type="button">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path
                            d="M17,11H9.41l3.3-3.29a1,1,0,1,0-1.42-1.42l-5,5a1,1,0,0,0-.21.33,1,1,0,0,0,0,.76,1,1,0,0,0,.21.33l5,5a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42L9.41,13H17a1,1,0,0,0,0-2Z" />
                    </svg>
                </button>
                <button class="home__nav home__nav--next" aria-label="next card" type="button">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path
                            d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z" />
                    </svg>
                </button>
            </div>

            <div class="col-12">
                <div class="owl-carousel home__carousel">
                    <!-- card -->
                    @if (Model.MovieDTOs != null)
                    {
                        @foreach (var movie in @Model.MovieDTOs)
                        {
                            @await Html.PartialAsync("Shared/Component/User/_SliderCard",movie, new
                    ViewDataDictionary(ViewData) { {"UserClass", @Model.UserClass}})
                        }
                    }
                    else
                    {
                        <h1 class="home__title" style="margin: 20px;">NO MOVIES OF THIS TYPE</h1>
                    }
                    <!-- end card -->

                </div>
            </div>
        </div>
    </div>
</section>
<!-- end home -->
<!-- content -->
<section class="content">
    <div class="content__head">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <!-- content title -->
                    <h2 class="content__title"> Movies</h2>
                    <!-- end content title -->
                    <!-- content tabs nav -->
                    <ul class="nav nav-tabs content__tabs" id="content__tabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" data-toggle="tab" href="#tab-1" role="tab" aria-controls="tab-1"
                                aria-selected="true">Action</a>
                        </li>

                        <li class="nav-item" role="presentation">
                            <a class="nav-link" data-toggle="tab" href="#tab-2" role="tab" aria-controls="tab-2"
                                aria-selected="false">Romance</a>
                        </li>

                        <li class="nav-item" role="presentation">
                            <a class="nav-link" data-toggle="tab" href="#tab-3" role="tab" aria-controls="tab-3"
                                aria-selected="false">Comedy</a>
                        </li>

                        <li class="nav-item" role="presentation">
                            <a class="nav-link" data-toggle="tab" href="#tab-4" role="tab" aria-controls="tab-4"
                                aria-selected="false">Cartoon</a>
                        </li>

                    </ul>
                    <!-- end content tabs nav -->
                    <!-- content mobile tabs nav -->
                    <div class="content__mobile-tabs" id="content__mobile-tabs">
                        <div class="content__mobile-tabs-btn dropdown-toggle" role="navigation" id="mobile-tabs"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <input type="button" value="Action">
                            <span></span>
                        </div>

                        <div class="content__mobile-tabs-menu dropdown-menu" aria-labelledby="mobile-tabs">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="1-tab" data-toggle="tab" href="#tab-1" role="tab"
                                        aria-controls="tab-1" aria-selected="true">
                                        Action
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" id="2-tab" data-toggle="tab" href="#tab-2" role="tab"
                                        aria-controls="tab-2" aria-selected="false">Romance</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" id="3-tab" data-toggle="tab" href="#tab-3" role="tab"
                                        aria-controls="tab-3" aria-selected="false">Comedy</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" id="4-tab" data-toggle="tab" href="#tab-4" role="tab"
                                        aria-controls="tab-4" aria-selected="false">Cartoon</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- end content mobile tabs nav -->
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- content tabs -->
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="tab-1" role="tabpanel" aria-labelledby="1-tab">
                <div class="row row--grid">
                    <!-- card -->
                    @if (Model.MovieActionDTOs != null)
                    {
                        @foreach (var movie in @Model.MovieActionDTOs)
                        {
                            @await Html.PartialAsync("Shared/Component/User/_MovieCardType1", movie, new
                    ViewDataDictionary(ViewData) { {"UserClass", @Model.UserClass}})
                        }
                    }
                    else
                    {
                        <h1 class="home__title" style="margin: 20px;">NO MOVIES OF THIS TYPE</h1>
                    }
                    <!-- end card -->

                </div>
            </div>

            <div class="tab-pane fade" id="tab-2" role="tabpanel" aria-labelledby="2-tab">
                <div class="row row--grid">
                    <!-- card -->
                    @if (Model.MovieRomanceDTOs != null)
                    {
                        @foreach (var movie in @Model.MovieRomanceDTOs)
                        {
                            @await Html.PartialAsync("Shared/Component/User/_MovieCardType1", movie, new
                    ViewDataDictionary(ViewData) { {"UserClass", @Model.UserClass}})
                        }
                    }
                    else
                    {
                        <h1 class="home__title" style="margin: 20px;">NO MOVIES OF THIS TYPE</h1>
                    }
                    <!-- end card -->

                </div>
            </div>

            <div class="tab-pane fade" id="tab-3" role="tabpanel" aria-labelledby="3-tab">
                <div class="row row--grid">
                    <!-- card -->
                    @if (Model.MovieComedyDTOs != null)
                    {
                        @foreach (var movie in @Model.MovieComedyDTOs)
                        {
                            @await Html.PartialAsync("Shared/Component/User/_MovieCardType1", movie, new
                    ViewDataDictionary(ViewData) { {"UserClass", @Model.UserClass}})
                        }

                    }
                    else
                    {
                        <h1 class="home__title" style="margin: 20px;">NO MOVIES OF THIS TYPE</h1>
                    }
                    <!-- end card -->


                </div>
            </div>

            <div class="tab-pane fade" id="tab-4" role="tabpanel" aria-labelledby="4-tab">
                <div class="row row--grid">
                    <!-- card -->
                    @if (Model.MovieCartoonDTOs != null)
                    {
                        @foreach (var movie in @Model.MovieCartoonDTOs)
                        {
                            @await Html.PartialAsync("Shared/Component/User/_MovieCardType1", movie, new
                    ViewDataDictionary(ViewData) { {"UserClass", @Model.UserClass}})
                        }
                    }
                    else
                    {
                        <h1 class="home__title" style="margin: 20px;">NO MOVIES OF THIS TYPE</h1>
                    }
                    <!-- end card -->
                </div>
            </div>
        </div>
        <!-- end content tabs -->
    </div>
</section>
<!-- end content -->
<!-- expected premiere -->
<section class="section section--bg" data-bg="images/section/section.jpg">
    <div class="container">
        <div class="row">
            <!-- section title -->
            <div class="col-12">
                <h2 class="section__title">Expected premium</h2>
            </div>
            <!-- end section title -->
        </div>

        <div class="row row--grid">

            <!-- card -->
            @if (Model.MoviePremiumDTOs != null)
            {
                @foreach (var movie in @Model.MoviePremiumDTOs)
                {
                    @await Html.PartialAsync("Shared/Component/User/_MovieCardType3", movie, new
            ViewDataDictionary(ViewData) { {"UserClass", @Model.UserClass}})
                }
            }
            else
            {
